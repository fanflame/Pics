<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_enabled="false">
      <shape>
          <padding android:left="8dp" android:right="8dp" android:top="8dp" android:bottom="8dp"/>
          <corners android:topLeftRadius="@dimen/btn_radius" android:topRightRadius="@dimen/btn_radius"/>
          <stroke android:width="1dp" android:color="@color/global_bg_gray"/>
          <solid android:color="@color/light_gray"/>
      </shape>
  </item>
    <item android:state_enabled="true">
        <shape>
            <padding android:left="8dp" android:right="8dp" android:top="8dp" android:bottom="8dp"/>
            <corners android:topLeftRadius="@dimen/btn_radius" android:topRightRadius="@dimen/btn_radius"/>
            <stroke android:width="1dp" android:color="@color/global_bg_gray"/>
            <solid android:color="@color/theme_dialog_bg"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <padding android:left="8dp" android:right="8dp" android:top="8dp" android:bottom="8dp"/>
            <corners android:topLeftRadius="@dimen/btn_radius" android:topRightRadius="@dimen/btn_radius"/>
            <stroke android:width="1dp" android:color="@color/global_bg_gray"/>
            <solid android:color="@color/btn_black_press"/>
        </shape>
    </item>
</selector>
