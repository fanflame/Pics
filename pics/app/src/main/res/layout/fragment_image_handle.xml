<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:material="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/tv_styles"
        android:id="@+id/tvDown"
        android:text="下载"
        android:layout_gravity="center"
        android:layout_margin="8dp" />

    <TextView
        style="@style/tv_styles"
        android:id="@+id/tvWallpaper"
        android:text="设置为壁纸"
        android:layout_gravity="center"
        android:layout_margin="8dp" />


    <com.ran.pics.view.MaterialSytle.LButton
        android:id="@+id/setWallpaper"
        style="@style/tv_styles"
        android:gravity="right"
        android:text="设置为桌面壁纸"
        material:widget_animColor="#bbff2d6f" />

    <com.ran.pics.view.MaterialSytle.LButton
        android:id="@+id/setLockpaper"
        style="@style/tv_styles"
        android:text="设置为锁屏壁纸"
        material:widget_animColor="#bbff2d6f" />

    <com.ran.pics.view.MaterialSytle.LButton
        android:id="@+id/downpaper"
        style="@style/tv_styles"
        android:text="下载壁纸"
        material:widget_animColor="#bbff2d6f" />
</LinearLayout>